<Window x:Class="DataLogic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataLogic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="listView" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="300">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Application Name" DisplayMemberBinding="{Binding ProcessName}" />
                    <GridViewColumn Header="Process ID" DisplayMemberBinding="{Binding ProcessId}" />
                    <GridViewColumn Header="Process Type" DisplayMemberBinding="{Binding ProcessType}" />
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox Name="tableNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="150" Margin="0,300,0,0"/>
    </Grid>
</Window>
